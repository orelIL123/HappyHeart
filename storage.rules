rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isApprovedUser() {
      return isSignedIn() &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.approvalStatus == 'approved';
    }

    function isAdmin() {
      return isApprovedUser() &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Profile images - users can upload their own, all approved users can read
    match /profile_images/{userId} {
      allow read: if isApprovedUser();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    match /profile_images/{userId}/{fileName} {
      allow read: if isApprovedUser();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Certifications - anyone registering can upload, admins can read
    match /certifications/{fileName} {
      allow read: if isAdmin();
      allow write: if isSignedIn(); // Allow during registration
    }

    // Default deny for everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
